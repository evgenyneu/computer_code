<div class="flex justify-center">
  <div class="w-full max-w-xs">
    <h1 class="px-8">Add a new friend</h1>

    <%= form_with model: @friend, url: friends_path, local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-6 mb-4" do |f| %>

      <div class="mb-4">
        <%= f.label :email, nil, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :email, type: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: 'Email' %>
      </div>

      <div class="flex justify-center">
        <%= f.submit 'Add Friend', class: "cursor-pointer bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>

    <% end %>

  </div>
</div>
