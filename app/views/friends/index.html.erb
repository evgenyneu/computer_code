<h1>Your friends</h1>

<p>
  <%= link_to 'Add a  friend', new_friend_path, class: "cursor-pointer bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
</p>


<% if current_user.friendships.empty? %>
  <p class='my-10'>You have no friends ğŸ˜­ğŸ˜­ğŸ˜­.</p>
<% else %>

<div class="flex flex-col mt-10 mb-3">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                User
              </th>
              <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Favourite animal
              </th>
              <th class="px-6 py-3 bg-gray-50"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <%= render partial: "friendship", collection: current_user.friendships %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<p class="text-gray-500 text-xs">
  The images were generated by <a href="https://thispersondoesnotexist.com" class="underline" target="_blank">thispersondoesnotexist.com</a>.
</p>

<% end %>
